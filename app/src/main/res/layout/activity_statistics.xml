<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.android.vikas.quizzer.Statistics"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/rl1"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trippy"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:id="@+id/trippy"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Created by:    Vikas Kumar\nPowered by:  TrippV"
        android:textColor="#927f35"
        android:textSize="15sp"
        android:id="@+id/Vikas"
        android:layout_below="@+id/trippy"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Play"
        android:textColor="#927f35"
        android:layout_below="@+id/Vikas"
        android:layout_marginTop="60dp"
        android:id="@+id/tv1"
        android:textSize="15sp"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:id="@+id/iv1"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of games played: "
        android:textColor="#de85b9ae"
        android:layout_below="@+id/iv1"
        android:id="@+id/tv2"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of games completed: "
        android:textColor="#de85b9ae"
        android:layout_below="@+id/tv2"
        android:id="@+id/tv3"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Win Percentage: "
        android:textColor="#de85b9ae"
        android:layout_below="@+id/tv3"
        android:id="@+id/tv4"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest Score: "
        android:textColor="#de85b9ae"
        android:layout_below="@+id/tv4"
        android:id="@+id/tv5"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accuracy: "
        android:textColor="#de85b9ae"
        android:layout_below="@+id/tv5"
        android:id="@+id/accuracy"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplayer"
        android:textColor="#927f35"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/accuracy"
        android:id="@+id/tv6"
        android:textSize="15sp"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:id="@+id/iv2"
        android:layout_below="@+id/tv6"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of games played: "
        android:textColor="#de85b9ae"
        android:layout_below="@+id/iv2"
        android:id="@+id/tv7"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of games won: "
        android:textColor="#de85b9ae"
        android:layout_below="@+id/tv7"
        android:id="@+id/tv8"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Win Percentage: "
        android:textColor="#de85b9ae"
        android:layout_below="@+id/tv8"
        android:id="@+id/tv9"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest Score: "
        android:textColor="#de85b9ae"
        android:layout_below="@+id/tv9"
        android:id="@+id/tv10"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completion"
        android:textColor="#927f35"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tv10"
        android:id="@+id/tv11"
        android:textSize="15sp"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:id="@+id/iv3"
        android:layout_below="@+id/tv11"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of topics played: "
        android:textColor="#de85b9ae"
        android:layout_below="@+id/iv3"
        android:id="@+id/tv12"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>
</ScrollView>